@{
}
@model LessonAddDTO

<div class="card-body">
    <div class="container">
        <div class="row">
            <form asp-controller="Lesson" asp-action="Create" method="post" class="form-group">
                <div class="col-6">
                    <span>Code</span>
                    <input type="number"  step="0,1" name="Code" class="form-control" value="@Model.Code" />
                     <span asp-validation-for="@Model.Code" class="text-danger"></span>
                </div>
                 <div class="col-6">
                    <span> Name</span>
                    <input type="text" name="Name" class="form-control" value="@Model.Name" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <span>Class Room</span>
                     <select name="ClassRoomId" class="form-control">
                         @foreach (var item in Model.ClassRooms)
                        {
                            <option value="@item.Id">@item.Number</option>
                        }
                     </select>
                    <span asp-validation-for="@Model.ClassRoomId" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <span>Teacher</span>
                     <select name="TeacherId" class="form-control">
                         @foreach (var item in Model.Teachers)
                        {
                            <option value="@item.Id">@item.FirstName @item.LastName</option>
                        }
                     </select>
                    <span asp-validation-for="@Model.TeacherId" class="text-danger"></span>
                </div>
                <button type="submit"  class="btn btn-primary mt-4">Submit</button>
            </form>
        </div>
    </div>
</div>
