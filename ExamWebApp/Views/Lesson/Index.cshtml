@{
}

@model ICollection<LessonIndexDTO>
<div class="text-center">
     <a class="btn btn-success btn-sm" asp-area="" asp-controller="Lesson" asp-action="Create">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Teacher</th>
                <th scope="col">Classroom</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                        <td>@item.TeacherFullName</td>
                        <td>@item.ClassRoom</td>
                        <td>
                           <a class="btn btn-danger btn-sm" asp-area="" asp-controller="Lesson" asp-action="Delete" asp-route-id="@item.Id">Delete</a> 
                           <a class="btn btn-info btn-sm" asp-area="" asp-controller="Lesson" asp-action="Update" asp-route-id="@item.Id">Update</a> 
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
