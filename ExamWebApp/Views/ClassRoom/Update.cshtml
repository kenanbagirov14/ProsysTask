@{
}
@model ClassRoomAddDTO

<div class="card-body">
    <div class="container">
        <div class="row">
            <form asp-controller="ClassRoom" asp-action="Update" method="post" class="form-group">
                <div class="col-6">
                    <span>Name</span>
                    <input type="text" name="Name" class="form-control" value="@Model.Name" />
                     <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                 <div class="col-6">
                    <span>Number</span>
                    <input type="number"  name="Number" class="form-control" value="@Model.Number" />
                    <span asp-validation-for="@Model.Number" class="text-danger"></span>
                </div>
                <button type="submit"  class="btn btn-primary mt-4">Submit</button>
            </form>
        </div>
    </div>
</div>
