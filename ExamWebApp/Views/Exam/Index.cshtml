@{
}

@model ICollection<ExamIndexDTO>
<div class="text-center">
     <a class="btn btn-success btn-sm" asp-area="" asp-controller="Exam" asp-action="Create">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Result Grade</th>
                <th scope="col">Exam Name</th>
                <th scope="col">Student Name</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ExamDate</td>
                        <td>@item.ResultGrade</td>
                        <td>@item.LessonName</td>
                        <td>@item.StudentFullName</td>
                        <td>
                           <a class="btn btn-danger btn-sm" asp-area="" asp-controller="Exam" asp-action="Delete" asp-route-id="@item.Id">Delete</a> 
                           <a class="btn btn-info btn-sm" asp-area="" asp-controller="Exam" asp-action="Update" asp-route-id="@item.Id">Update</a> 
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
